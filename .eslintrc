{
  "extends": ["eslint:recommended"],

  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },

  "rules": {
    "curly": 0,
    "eol-last": 1,
    "eqeqeq": 2,
    "indent": [2, 2],
    "no-throw-literal": 2,
    "no-unused-vars": [2, {"vars": "all", "args": "none"}],
    "no-var": 0,
    "prefer-const": 1,
    "prefer-template": 1,
    "quotes": [2, "single"],
    "radix": 1,
    "semi": 1
  }
}
